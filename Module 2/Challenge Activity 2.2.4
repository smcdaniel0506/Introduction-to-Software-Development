      int numPeople = 0;

      numPeople = 10;

      /* Your solution goes here  */
      
      numPeople = numPeople + 5;
      
      /* End of solution */

      System.out.print("There are ");
      System.out.print(numPeople);
      System.out.println(" people.");

      return;
   }
}
